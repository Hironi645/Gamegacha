{
  "description": "User data storage for Emoji Battle Gacha",
  "schema": {
    "username": "string - unique identifier",
    "email": "string - user email address",
    "password": "string - hashed password",
    "coins": "number - in-game currency",
    "gems": "number - premium currency",
    "cards": "array - user's card collection",
    "wins": "number - total battle wins",
    "losses": "number - total battle losses",
    "winStreak": "number - consecutive wins",
    "createdAt": "string - ISO date",
    "lastLogin": "string - ISO date",
    "starterPackClaimed": "boolean - starter pack status",
    "activities": "array - user activity log"
  },
  "defaultValues": {
    "coins": 1000,
    "gems": 100,
    "wins": 0,
    "losses": 0,
    "winStreak": 0,
    "starterPackClaimed": false
  },
  "users": {}
}
